@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var adminEmail = Context.Session.GetString("AdminEmail");
    var customerEmail = Context.Session.GetString("CustomerEmail");
    var isAdmin = !string.IsNullOrEmpty(adminEmail);
    var isCustomer = !string.IsNullOrEmpty(customerEmail);

    var cartCount = HttpContextAccessor.HttpContext?.Session.GetInt32("CartCount");
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC_Retail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ABC_Retail.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand fw-bold text-info" asp-controller="Home" asp-action="Index">
                    ABC_Retail
                </a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link text-secondary">Shop</span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link text-secondary">Deals</span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link text-secondary">Support</span>
                        </li>
                        <li class="nav-item position-relative">
                            <a class="nav-link text-light" asp-controller="CustomerCart" asp-action="ViewCart">
                                <i class="bi bi-cart"></i> Cart
                                @if (cartCount.HasValue && cartCount.Value > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @cartCount
                                    </span>
                                }
                            </a>
                        </li>
                    </ul>

                    <!-- Right Side: Auth -->
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        @if (isCustomer)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-secondary">Welcome, @customerEmail</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Customer" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Customer" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="loginDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Login
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Login">Customer Login</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Login">Admin Login</a></li>
                                </ul>

                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ABC_Retail - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
