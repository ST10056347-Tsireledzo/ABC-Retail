@model List<ABC_Retail.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    var email = Context.Session.GetString("CustomerEmail");

}

@Html.Partial("_StatusMessage")


<div class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-dark">Welcome to ABC Retail</h1>
    </div>

    <!-- 🔍 Search Bar -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <div class="input-group shadow-sm">
                <input type="text" class="form-control border-dark" placeholder="Search products..." />
                <button class="btn btn-dark" type="button">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </div>
    </div>

    <!-- 🧼 Filter Section -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-8 text-center">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-dark">All</button>
                <button type="button" class="btn btn-outline-dark">Electronics</button>
                <button type="button" class="btn btn-outline-dark">Clothing</button>
                <button type="button" class="btn btn-outline-dark">Books</button>
            </div>
        </div>
    </div>

    <!-- 🛍️ Product Grid -->
    <div class="row text-center">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card border-dark shadow-sm h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">R @product.Price</p>
                        <p class="card-text @(product.StockQty == 0 ? "text-danger" : "text-success")">
                            <strong>In Stock:</strong> @product.StockQty
                        </p>

                        <form asp-controller="CustomerCart" asp-action="AddToCart" method="post" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="ProductId" value="@product.RowKey" />
                            <input type="hidden" name="ProductName" value="@product.Name" />
                            <input type="hidden" name="Price" value="@product.Price" />

                            <input type="number" name="Quantity"
                                   value="1"
                                   min="1"
                                   max="@product.StockQty"
                                   class="form-control form-control-sm w-25"
                                   title="Select quantity" />

                            <button type="submit"
                                    class="btn btn-dark"
                            @(product.StockQty > 0 ? "" : "disabled")>
                                Add to Cart
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    setTimeout(() => {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            alert.classList.remove('show');
            alert.classList.add('fade');
            setTimeout(() => alert.remove(), 500);
        });
    }, 3000);
</script>

