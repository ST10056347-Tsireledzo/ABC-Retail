@model ABC_Retail.Models.ViewModels.LoginCustomerViewModel

@{
    ViewData["Title"] = "Customer Login";
}


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 420px; background-color: #ffffff;">
        <div class="text-center mb-4">
            <h4 class="mt-3 text-secondary">Sign in to your account</h4>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Continue with Email</button>
        </form>

        <div class="mt-4 text-center text-muted">or continue with</div>

        <div class="d-grid gap-2 mt-2">
            <button class="btn btn-outline-secondary" disabled>Google</button>
            <button class="btn btn-outline-secondary" disabled>Facebook</button>
            <button class="btn btn-outline-secondary" disabled>Apple</button>
            <button class="btn btn-outline-secondary" disabled>SSO</button>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Register" class="text-decoration-none">New here? Register</a>
        </div>

        <div class="mt-3 text-center text-muted" style="font-size: 0.8rem;">
            Protected by reCAPTCHA Enterprise<br />
            <a href="#" class="text-muted text-decoration-none">Privacy Policy</a> ·
            <a href="#" class="text-muted text-decoration-none">Terms of Use</a>
        </div>
    </div>
</div>


