@model ABC_Retail.Models.ViewModels.RegisterCustomerViewModel

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 420px; background-color: #ffffff;">
        <div class="text-center mb-4">
            <h4 class="mt-3 text-secondary">Create your account</h4>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Account</button>
        </form>

        <div class="mt-4 text-center text-muted">or sign up with</div>

        <div class="d-grid gap-2 mt-2">
            <button class="btn btn-outline-secondary" disabled>Google</button>
            <button class="btn btn-outline-secondary" disabled>Facebook</button>
            <button class="btn btn-outline-secondary" disabled>Apple</button>
            <button class="btn btn-outline-secondary" disabled>SSO</button>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Login" class="text-decoration-none">Already have an account? Sign in</a>
        </div>

        <div class="mt-3 text-center text-muted" style="font-size: 0.8rem;">
            Protected by reCAPTCHA Enterprise<br />
            <a href="#" class="text-muted text-decoration-none">Privacy Policy</a> ·
            <a href="#" class="text-muted text-decoration-none">Terms of Use</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}