@model List<ABC_Retail.Models.Customer>
@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">👥 Active Customers</h2>
        <span class="text-muted">Total: @Model.Count</span>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Registered</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.FullName</td>
                            <td>@customer.Email</td>
                            <td>@customer.RegisteredOn.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="badge bg-success">Active</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="ViewCustomer" asp-route-rowKey="@customer.RowKey" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-person-lines-fill"></i> View
                                </a>
                                <button class="btn btn-sm btn-outline-warning" disabled>
                                    <i class="bi bi-slash-circle"></i> Suspend
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No active customers found.
        </div>
    }
</div>
