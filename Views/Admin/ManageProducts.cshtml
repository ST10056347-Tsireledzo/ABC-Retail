@model List<ABC_Retail.Models.Product>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Products";
}

<h2 style="margin-bottom: 20px;">Product Management</h2>
<a asp-action="CreateProduct" class="btn btn-primary mb-4">
    <i class="fas fa-plus me-2"></i> Create New Product
</a>


@if (!Model.Any())
{
    <p>No products available.</p>
}
else
{
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px;">
        @foreach (var product in Model)
        {
            <div style="background-color: white; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); padding: 20px;">
                <div style="display: flex; gap: 15px;">
                    <div>
                        @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" style="width: 100px; height: auto; border-radius: 6px;" />
                        }
                        else
                        {
                            <div style="width: 100px; height: 100px; background-color: #f3f4f6; display: flex; align-items: center; justify-content: center; border-radius: 6px;">
                                <span style="color: #6b7280;">No image</span>
                            </div>
                        }
                    </div>
                    <div style="flex-grow: 1;">
                        <h4 style="margin: 0;">@product.Name</h4>
                        <p style="margin: 5px 0; color: #6b7280;">@product.Category</p>
                        <p style="margin: 5px 0;"><strong>Price:</strong> @product.Price.ToString("C")</p>
                        <p style="margin: 5px 0;"><strong>Stock:</strong> @product.StockQty</p>
                        <p style="margin: 5px 0;"><strong>Description:</strong> @product.Description</p>
                    </div>
                </div>

                <div style="margin-top: 15px; display: flex; gap: 10px;">
                    <a asp-action="EditProduct" asp-route-rowKey="@product.RowKey" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="DeleteProduct" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="rowKey" value="@product.RowKey" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete @product.Name?')">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
}
